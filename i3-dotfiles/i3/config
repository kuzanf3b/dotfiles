# i3 config
set $mod Mod4
font pango:Hack 9
floating_modifier $mod
for_window [class=".*"] border none

# Gaps
gaps inner 6
gaps outer 4
smart_gaps on

# Launch apps
set $term ghostty
bindsym $mod+Return exec $term
bindsym $mod+E exec thunar
bindsym $mod+D exec rofi -show drun
bindsym $mod+Shift+X exec "betterlockscreen -l dimblur"

# Reload & restart
bindsym $mod+R restart
bindsym $mod+Shift+C reload

# Kill / exit
bindsym $mod+Q kill
bindsym $mod+Shift+Q exec "i3-nagbar -t warning -m 'Exit i3 session?' -b 'Yes' 'i3-msg exit'"

# Screenshots
bindsym Print exec --no-startup-id /home/kuzan/.config/scripts/screenshots/scrotselclip.sh
bindsym Ctrl+Print exec --no-startup-id /home/kuzan/.config/scripts/screenshots/scrotwinclip.sh
bindsym $mod+Print exec --no-startup-id /home/kuzan/.config/scripts/screenshots/scrotfullclip.sh

# Scripts
bindsym $mod+Ctrl+b exec --no-startup-id /home/kuzan/.config/scripts/bookmarks/bookmarks-rofi.sh
bindsym $mod+Ctrl+p exec --no-startup-id /home/kuzan/.config/scripts/project-repos/pr-rofi.sh
bindsym $mod+Ctrl+w exec --no-startup-id /home/kuzan/.config/scripts/wallpapers/wallpapers-rofi.sh
bindsym $mod+Ctrl+s exec --no-startup-id /home/kuzan/.config/scripts/system-menu/sm-rofi.sh

# Focus movement (HJKL style)
bindsym $mod+H focus left
bindsym $mod+J focus down
bindsym $mod+K focus up
bindsym $mod+L focus right

# Move window (Shift + HJKL)
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# Resize (Ctrl + HJKL)
bindsym $mod+Ctrl+H resize shrink width 5 px or 5 ppt
bindsym $mod+Ctrl+L resize grow width 5 px or 5 ppt
bindsym $mod+Ctrl+J resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+K resize shrink height 5 px or 5 ppt

# Split
bindsym $mod+V split h
bindsym $mod+Shift+V split v
bindsym $mod+T split toggle

# Fullscreen / floating
bindsym $mod+Shift+F fullscreen toggle
bindsym $mod+F floating toggle

# Layouts
bindsym $mod+W layout tabbed
bindsym $mod+Shift+S layout stacking
bindsym $mod+Shift+E layout toggle split

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# Volume control
bindsym XF86AudioRaiseVolume exec "pamixer -i 3 && pamixer --get-volume > /tmp/xobpipe"
bindsym XF86AudioLowerVolume exec "pamixer -d 3 && pamixer --get-volume > /tmp/xobpipe"
bindsym XF86AudioMute exec "amixer sset Master toggle"

# Autostart
exec_always --no-startup-id xset r rate 200 35
exec_always --no-startup-id bash -c "sleep 1 && ~/.config/polybar/launch.sh"
exec_always --no-startup-id ~/.config/autostart/xidlehook.sh

exec --no-startup-id dunst
exec --no-startup-id picom
exec --no-startup-id redshift
exec --no-startup-id feh --bg-fill ~/Pictures/Wallpapers/ac-boat-island.png
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1


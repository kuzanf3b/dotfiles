# Default: Reload config with Shift + Cmd + ,
config-file = schemes/tokyonight

background = #000000
background-opacity = 0.90
background-blur-radius = 23

font-family = JetBrainsMono Nerd Font
font-size = 12

cursor-style = block
cursor-style-blink = true
cursor-invert-fg-bg = true

mouse-hide-while-typing = true
confirm-close-surface = false

window-decoration = auto
window-padding-x = 5
window-padding-y = 5
window-padding-balance = false

auto-update = check
auto-update-channel = stable

# Extras
shell-integration-features = no-cursor
copy-on-select = clipboard

# Tools
keybind = super+i=inspector:toggle
keybind = super+g>,=toggle_quick_terminal
keybind = super+g>r=reload_config
keybind = super+g>x=close_surface
keybind = super+g>c=new_tab
keybind = super+g>n=new_window

# Tab navigation
keybind = super+g>1=goto_tab:1
keybind = super+g>2=goto_tab:2
keybind = super+g>3=goto_tab:3
keybind = super+g>4=goto_tab:4
keybind = super+g>5=goto_tab:5
keybind = super+g>6=goto_tab:6
keybind = super+g>7=goto_tab:7
keybind = super+g>8=goto_tab:8
keybind = super+g>9=goto_tab:9

# Splitting
keybind = super+g>\=new_split:right
keybind = super+g>-=new_split:down
keybind = super+g>e=equalize_splits

# Split navigation
keybind = super+g>h=goto_split:left
keybind = super+g>j=goto_split:bottom
keybind = super+g>k=goto_split:top
keybind = super+g>l=goto_split:right

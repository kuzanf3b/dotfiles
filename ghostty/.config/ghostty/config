# Default: Reload config with Shift + Cmd + ,
config-file = schemes/rose-pine

background = #000000
background-opacity = 0.90
background-blur-radius = 23

font-family = JetBrainsMono Nerd Font
font-size = 12

cursor-style = block
cursor-style-blink = true
cursor-invert-fg-bg = true

mouse-hide-while-typing = true
confirm-close-surface = false

window-decoration = auto
window-padding-x = 5
window-padding-y = 5
window-padding-balance = false

auto-update = check
auto-update-channel = stable

# Extras
shell-integration-features = no-cursor
copy-on-select = clipboard

# Tools
keybind = super+i=inspector:toggle
keybind = super+b>,=toggle_quick_terminal
keybind = super+b>r=reload_config
keybind = super+b>x=close_surface
keybind = super+b>c=new_tab
keybind = super+b>n=new_window

# Tab navigation
keybind = super+b>1=goto_tab:1
